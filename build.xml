<project name="ProyectoSistemas" basedir="." default="jar">

    <!-- Rutas -->
    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="dist" location="dist"/>
    <property name="lib" location="lib"/>

    <!-- Inicialización -->
    <target name="init">
        <mkdir dir="${build}"/>
        <mkdir dir="${dist}"/>
    </target>

    <!-- Compilación -->
    <target name="compile" depends="init">
        <javac srcdir="${src}" destdir="${build}" includeantruntime="false">
            <classpath>
                <fileset dir="${lib}" includes="*.jar"/>
            </classpath>
        </javac>
    </target>

    <!-- Generar JAR (sin Main-Class) -->
    <target name="jar" depends="compile">
        <jar destfile="${dist}/ProyectoSistemas.jar" basedir="${build}"/>
    </target>

    <!-- Limpiar -->
    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

</project>
